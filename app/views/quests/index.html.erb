<div class="max-w-6xl mx-auto p-6">
  <div class="bg-white rounded-xl shadow-lg p-4 sm:p-8 mb-6 sm:mb-8 relative">
    <div class="flex flex-col lg:flex-row items-center gap-6 sm:gap-10">
      <%= image_tag "parn1.jpg", class: "w-32 h-32 sm:w-48 sm:h-48 lg:w-60 lg:h-60 object-cover rounded-2xl shadow-md", data: { test_id: "profile-quests-image" } %>
      <div class="text-center lg:text-left flex-1">
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-800 mb-2" data-test-id="profile-name">Titinan Jaemduag</h1>
        <h2 class="text-lg sm:text-xl text-[#519da4] font-medium mb-3 sm:mb-4" data-test-id="academy-name">Farmhouse Academy</h2>
        <p class="text-gray-600 text-base sm:text-lg mb-1 sm:mb-2">Welcome to my quest page!</p>
        <p class="text-gray-600 text-sm sm:text-base mb-4 sm:mb-6">Here you will find all my adventures and achievements.</p>
      </div>
    </div>
    <div class="flex justify-center mt-4 sm:absolute sm:bottom-6 sm:right-6 sm:mt-0">
      <%= link_to "PaRNtITi's Brag", brag_index_path, 
          class: "inline-block bg-[#5BA7AE] hover:bg-[#438389] text-white font-semibold px-4 py-2 sm:px-8 sm:py-3 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 text-sm sm:text-base",
          data: { test_id: "brag-link" } %>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
    <%= form_with(model: @quest, local: true, class: "flex flex-col sm:flex-row gap-4") do |form| %>
      <div class="flex-1">
        <%= form.text_field :name, placeholder: "Add a new quest...", 
            class: "w-full px-6 py-4 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 transition-all duration-300 text-lg placeholder-gray-400",
            data: { test_id: "quest-input" } %>
      </div>
      <%= form.submit "Add Quest", 
          class: "bg-[#2b78a1] hover:bg-[#1f5673] text-white font-semibold py-4 px-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 ",
          data: { test_id: "submit-quest-button" } %>
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <% if @quests.any? %>
      <div class="divide-y divide-gray-100">
        <% @quests.each do |quest| %>
          <turbo-frame id="quest_<%= quest.id %>">
            <%= render "quest", quest: quest %>
          </turbo-frame>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <div class="text-gray-400 mb-4">
          <svg class="mx-auto h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
        </div>
        <p class="text-xl text-gray-500 font-medium mb-2" data-test-id="empty-quest" >No quests yet!</p>
        <p class="text-gray-400">Add your first quest above to get started on your journey.</p>
      </div>
    <% end %>
  </div>
</div>
